<button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#addSubjectModal" title="Add Subject"><i class="bi bi-journal-plus text-white"></i></button>

<div class="modal fade" id="addSubjectModal" tabindex="-1" aria-labelledby="addSubjectModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <form action="/subject" method="post">
            <div class="row">
                <div class="col">
                    <label for="course">Course</label>
                    <select name="course" id="course" class="form-select form-select-sm">
                        <option value="">Select Course</option>
                        <option value="act">act</option>
                        <option value="bscs">bscs</option>
                        <option value="bsit">bsit</option>
                        <option value="bsis">bsis</option>
                    </select>
                </div>
                <div class="col">
                    <label for="year">Year</label>
                    <select name="year" id="year" class="form-select form-select-sm">
                        <option value="">Select Year</option>
                        <option value="1st">1st</option>
                        <option value="2nd">2nd</option>
                        <option value="3rd">3rd</option>
                        <option value="4th">4th</option>
                        <option value="5th">5th</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="trimester">Trimester</label>
                    <select name="trimester" id="trimester" class="form-select form-select-sm">
                        <option value="">Select Trimester</option>
                        <option value="1st">1st</option>
                        <option value="2nd">2nd</option>
                        <option value="3rd">3rd</option>
                    </select>
                </div>
                <div class="col">
                    <label for="code">Code</label>
                    <input type="text" class="form-control form-control-sm" id="code" name="code">
                </div>
            </div>

            <div class="d-grid mt-2">
                <button class="btn btn-sm btn-primary">Submit</button>
            </div>
            
        </form>
      </div>
    </div>
  </div>
</div>

