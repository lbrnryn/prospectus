<button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentBtn" title="Add Student">
  <i class="bi bi-person-plus-fill"></i>
</button>

<div class="modal fade" id="addStudentBtn" tabindex="-1" aria-labelledby="addStudentBtnLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
        <form action="/register" method="post" class="small">
            <div class="row">
                <div class="col">
                    <label for="firstname">Firstname</label>
                    <input type="text" class="form-control form-control-sm" id="firstname" name="firstname">
                </div>
                <div class="col">
                    <label for="lastname">Lastname</label>
                    <input type="text" class="form-control form-control-sm" id="lastname" name="lastname">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="studentId">Student ID</label>
                    <input type="text" class="form-control form-control-sm" id="studentId" name="studentId">
                </div>
                <div class="col">
                    <label for="">Course</label>
                    <select class="form-select form-select-sm" name="course">
                        <option value="" selected>Select Course...</option>
                        <option value="act">ACT</option>
                        <option value="bscs">BSCS</option>
                        <option value="bsit">BSIT</option>
                        <option value="bsis">BSIS</option>
                    </select>
                </div>
                <div class="col">
                    <label for="">Campus</label>
                    <select class="form-select form-select-sm" name="campus">
                        <option value="" selected>Select Campus...</option>
                        <option value="cainta">Cainta</option>
                        <option value="antipolo">Antipolo</option>
                        <option value="binangonan">Binangonan</option>
                        <option value="cogeo">Cogeo</option>
                        <option value="san mateo">San Mateo</option>
                        <option value="sumulong">Sumulong</option>
                        <option value="taytay">Taytay</option>
                    </select>
                </div>
            </div>
            <div class="d-grid mt-2">
                <button class="btn btn-sm btn-primary">Submit</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>

